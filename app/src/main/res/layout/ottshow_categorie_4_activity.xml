<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorlight">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/onlinetv_backs" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/tondo_bold"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/popaction"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_above="@+id/topads">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/ad1"
                    layout="@layout/ottshow_activity_main_nativeads1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="165dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                app:cardBackgroundColor="@color/colorlightdark"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:id="@+id/ott_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/onlinetv_f1" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                app:cardBackgroundColor="@color/colorlightdark"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:id="@+id/ott_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/onlinetv_f2" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                app:cardBackgroundColor="@color/colorlightdark"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:id="@+id/ott_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/onlinetv_f3" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="165dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                app:cardBackgroundColor="@color/colorlightdark"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:id="@+id/ott_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/onlinetv_f4" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                app:cardBackgroundColor="@color/colorlightdark"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:id="@+id/ott_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/onlinetv_f5" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                app:cardBackgroundColor="@color/colorlightdark"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:id="@+id/ott_6"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/onlinetv_f6" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="165dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                app:cardBackgroundColor="@color/colorlightdark"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:id="@+id/ott_7"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/onlinetv_f7" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                app:cardBackgroundColor="@color/colorlightdark"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:id="@+id/ott_8"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/onlinetv_f8" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="160dp"
                                app:cardBackgroundColor="@color/colorlightdark"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:id="@+id/ott_9"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/onlinetv_f9" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />
                    </LinearLayout>
                </LinearLayout>

                <include
                    android:id="@+id/ad"
                    layout="@layout/ottshow_activity_main_nativeads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

    <include
        android:id="@+id/topads"
        layout="@layout/ottshow_activity_main_smallnativeads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
