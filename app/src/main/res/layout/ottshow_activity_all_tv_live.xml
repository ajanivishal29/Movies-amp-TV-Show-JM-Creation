<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorlight"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/topads"
        android:layout_below="@+id/name">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <include
                android:id="@+id/ad"
                layout="@layout/ottshow_activity_main_nativeads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/onlinetv_hotstar" />

                <ImageView
                    android:id="@+id/tv_btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/onlinetv_sony" />

                <ImageView
                    android:id="@+id/tv_btn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/onlinetv_voot" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_btn_4"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/onlinetv_zee_tv" />

                <ImageView
                    android:id="@+id/pp_btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/onlinetv_aaj_tak" />

                <ImageView
                    android:id="@+id/pp_btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/onlinetv_india_tv" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pp_btn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/onlinetv_abp_news" />

                <ImageView
                    android:id="@+id/pp_btn_4"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/onlinetv_dd_news" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/topads"
        layout="@layout/ottshow_activity_main_smallnativeads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
